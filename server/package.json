{
	"scripts": {
		"dev": "nodemon --exec ts-node src/app.ts",
		"build": "tsc",
		"start": "node dist/server.ts"
	},
	"nodemonConfig": {
		"ext": "ts,json",
		"watch": [
			"src"
		],
		"ignore": [
			"dist/",
			"misc/",
			"test/",
			"test.*",
			"test.ts"
		],
		"delay": "200"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dotenv": "^17.2.3",
		"express": "^5.1.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.19",
		"@types/express": "^5.0.3",
		"@types/node": "^24.7.0",
		"cross-env": "^10.1.0",
		"nodemon": "^3.1.10",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3"
	}
}
